{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <button class="btn btn-success btn-sm" {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-success btn-sm" {{action 'answerFormShow' question}}>New Answer</button>
{{/if}}
