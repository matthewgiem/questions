{{#if editQuestionForm}}
  <div>
    <h3>edit question form</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="statement">Question</label>
          {{input value=statement id="statement" placeholder=question.statement}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="additionalnotes">additional notes</label>
          {{input value=additionalnotes id="additionalnotes" placeholder=question.additionalnotes}}
        </div>
      </form>
    </div>
    <button class="btn btn-success btn-sm" {{action 'updateQuestionComponent' question}}>save</button>
  </div>
{{else}}
  <div>
    <button class="btn btn-success btn-sm" {{action 'editQuestionFormButton'}}>edit question</button>
  </div>
{{/if}}
